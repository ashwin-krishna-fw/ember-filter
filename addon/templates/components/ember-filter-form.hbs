<form class="filter-form" {{on "submit" (action "customSearch")}}>
  {{#each-in visibleFilterOptions as |key value|}}
    {{#if value.componentTemplate}}
      {{component value.componentTemplate
         filter=filter
         options=value
         key=key}}
    {{else}}
        {{ember-filter-form-element
          filter=filter
          options=value
          key=key}}
    {{/if}}
  {{/each-in}}
  <div>
    {{#if hasMoreElements}}
      {{component moreOptionTemplate nonVisibleOptions=nonVisibleOptions }}
    {{/if}}
  </div>
  <div class="filter-footer">
    {{component searchButtonTemplate }}
  </div>
</form>
